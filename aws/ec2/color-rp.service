[Unit]
Description=color-rp-service
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/color-rp
ExecStart=/bin/bash /home/ubuntu/color-rp/service.sh
Restart=always
StandardOutput=append:/var/log/colorai.log
StandardError=append:/var/log/colorai_error.log

[Install]
WantedBy=multi-user.target
